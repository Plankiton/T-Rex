# estrutura b√°sica

'^alg\w{0,}\ "%name&"': 'if __name__ == "__main__": # %name& {'

'^var':
   replace: '# variables'
   local:
      '%var?.{1,}&\:\ {0,}%type?\w{1,}&': '%var& = !{",".join(("%type&(),"*len("%var&".split(","))).split(","))}'
      keywords:
         caractere: str()
         caracter: str()
         literal: str()
         logico: bool()
         inteiro: int()
         real: float()
   end: main

'^inicio':
   replace: '# init'
   name: 'main'

'^fim\w{0,}': '# }'

# Escolha.. caso.. outro caso
'^escolha %expression&':
   name: switch
   childs: [ case, default]
   end: endswitch
   replace: 'if %expression&: # {'

'^caso %value&':
   name: case
   replace: 'if %expression& == %value&: # {'
   end:
      name: case
      replace: "# }\nelif %expression& == %value&: # {"

'^outro caso' :
   name: default
   replace: "# }\nelse: #{"

'^fimesc\w{0,}':
   name: endswitch
   replace: '# }'

# for
'para %var& de %ini& ate %fim& faca': 'for %var& in range(%ini&, %fim&): # {'
